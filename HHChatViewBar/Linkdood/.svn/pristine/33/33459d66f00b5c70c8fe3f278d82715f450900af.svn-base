typedef enum : NSUInteger {
    get_code_register = 0,
    get_code_resetpwd = 1,
} get_code_type;

#import "LDAuthModel.h"

@interface LDRegisterModel : LDItemModel

//第一步
/*!
 @property usertype
 @descript 用户类型 1.手机 2.qq 2.邮箱 4.豆豆号 5.身份证 6.豆豆账号
 */
@property (nonatomic) int8_t usertype;

/*!
 @property account
 @descript 帐号
 */
@property (nonatomic,copy) NSString *account;

/*!
 @property domain
 @descript 企业域
 */
@property (nonatomic,copy) NSString *domain;

/*!
 @property nationalCode
 @descript 国家码注册
 */
@property (nonatomic,copy) NSString *nationalCode;

/*!
 @property nickName
 @descript 注册时的昵称
 */
@property (nonatomic,copy) NSString *nickName;

/*!
 @property password
 @descript 密码
 */
@property (nonatomic,copy) NSString *password;

/*!
 @property verifyCode
 @descript 短信验证码
 */
@property (nonatomic,copy) NSString *verifyCode;

/*!
 * @method      registeryWithPassword
 * @descript    注册接口
                如果注册分两步走需要依次调用两次此接口(第一次只给verifyCode赋值,其它两个参数赋值nil,第二次只给password和nickName赋值,verifyCode赋值nil)
                如果注册分一步走则将三个参数都赋值
                verifyCode验证码值通过LDClient的getVerificationCodeWithType获取,然后通过该接口回调的LDRegisterModel调用此接口
 * @param       completion    回调代码块
 * @result      空
 */
- (void)registeryWithPassword:(NSString*)password
                     nickName:(NSString*)nickName
                   verifyCode:(NSString*)verifyCode
                   completion:(void (^) (NSError *error))completion;

/*!
 * @method      resetPassword
 * @descript    重置密码
                如果重置密码分两步走需要依次调用两次此接口(第一次只给verifyCode赋值,其它两个参数赋值nil,第二次只给password和nickName赋值,verifyCode赋值nil)
                如果重置密码分一步走则将三个参数都赋值
                verifyCode验证码值通过LDClient的getVerificationCodeWithType获取,然后通过该接口回调的LDRegisterModel调用此接口
 * @param       completion    回调代码块
 * @result      空
 */
- (void)resetPassword:(NSString*)password
             nickName:(NSString*)nickName
           verifyCode:(NSString*)verifyCode
           completion:(void (^) (NSError *error))completion;

@end
