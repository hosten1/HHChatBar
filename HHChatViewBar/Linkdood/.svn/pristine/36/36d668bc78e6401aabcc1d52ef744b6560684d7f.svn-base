/*!
 
 @header   LDSysMsgListModel.h
 
 @abstract 系统消息模块，完成系统消息的基本操作，如系统消息获取、删除等
 
 @author   Created by VRV.
 
 @version  0.3.0
 
 */
#import "LDListModel.h"
#import "LDSysMsgModel.h"

/*!
 @class LDSysMsgListModel
 @descript 系统消息集合类
 */
@interface LDSysMsgListModel : LDListModel


/*!
 @method  sysMessages
 @descript  获取系统消息
 @param     type 设置已读类型  
            offsetFlag 偏移标志，0 向上偏移; 1 向下偏移.
            beginID  起始ＩＤ号
            msgOffset 消息列偏移量
 @result    空
 */
- (void)sysMessages:(ReadType)type
         offsetFlag:(int)flag
            beginID:(int64_t)ID
          msgOffset:(int32_t)offset
         completion:(void (^) (NSError *error,LDSysMsgListModel *messages))completion;

/*!
 @method  sysMsgReaded
 @descript  设置系统消息已读
 @param     type 设置已读类型  messages 要设置已读的系统消息
 @result    空
 */
-(void)sysMsgReaded:(ReadType)type
           messages:(NSArray<LDSysMsgModel*>* )msgs
         completion:(void (^) (NSError *error))completion;

/*!
 @method  sysMsgRemoved
 @descript  删除系统消息
 @param     type 设置删除类型 0:表示删除所有系统消息， 1:删除加好友请求 2:删除加好友响应 3:删除加群请求 4:删除加群响应 type.
            messages 要删除的系统消息（当ReadType不为0时需要）
 @result    空
 */
-(void)sysMsgRemoved:(ReadType)type
            messages:(NSArray<LDSysMsgModel*>*)msgs
          completion:(void (^) (NSError *error))completion;

@end
