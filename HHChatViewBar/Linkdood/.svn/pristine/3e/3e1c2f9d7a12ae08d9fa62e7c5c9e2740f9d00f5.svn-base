#import "LDListModel+Extend.h"

@implementation LDListModel (Extend)

- (void)updateItem:(LDItemModel *)item{
    NSInteger index = [self indexWithItem:item];
    if (index >= 0) {
        [items replaceObjectAtIndex:index withObject:item];
    }else{
        [items addObject:item];
    }
}

- (void)resetItem:(LDItemModel*)item{
    NSInteger index = [self indexWithItem:item];
    if (index >= 0 ) {
        [items removeObjectAtIndex:index];
    }
    [items insertObject:item atIndex:0];
}

- (void)removeItem:(LDItemModel *)itemModel{
    __block NSInteger index = -1;
    [items enumerateObjectsUsingBlock:^(LDItemModel *item, NSUInteger idx, BOOL *stop) {
        if (item.ID == itemModel.ID) {
            index = idx;
            *stop = YES;
        }
    }];
    
    if (index >= 0) {
        [items removeObjectAtIndex:index];
    }
}

- (void)clearItems
{
    [items removeAllObjects];
    [sections removeAllObjects];
    [assembledItems removeAllObjects];
    [selectItems removeAllObjects];
}

@end
