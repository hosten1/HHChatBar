#import "LDTextMessageModel.h"

@implementation LDTextMessageModel

+ (instancetype)modelWithStruct:(void *)structural forStructType:(struct_type)type
{
    LDTextMessageModel *textMessage = [super modelWithStruct:structural forStructType:type];
    [textMessage transformMessage];
    return (LDTextMessageModel*)[super modelWithStruct:structural forStructType:type];
}

- (instancetype)initWithText:(NSString*)text
{
    if (self = [super init]) {
        self.messageType = MESSAGE_TYPE_TEXT;
        self.message = text;
    }
    return self;
}

-(void)transformMessage
{
    [super transformMessage];
}

- (void)transformString
{
    NSMutableDictionary *imageDic = [NSMutableDictionary dictionaryWithCapacity:0];
    [imageDic setObject:self.message forKey:@"body"];
    self.message = [imageDic JSONString];
}

@end
