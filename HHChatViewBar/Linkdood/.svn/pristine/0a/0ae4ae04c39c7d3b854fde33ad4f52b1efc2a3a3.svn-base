#import "LDMessageModel.h"
#import <CoreGraphics/CoreGraphics.h>
#import <UIKit/UIKit.h>

@interface LDImageMessageModel : LDMessageModel

/*!
 @property  fileName
 @descript  文件名称
 */
@property (strong,nonatomic) NSString *fileName;

/*!
 @property  thumbUrl
 @descript  缩略图路径
 */
@property (strong,nonatomic) NSString *thumbUrl;

/*!
 @property  mediaUrl
 @descript  大图路径
 */
@property (strong,nonatomic) NSString *mediaUrl;

/*!
 @property  enc_dec_key
 @descript  图片加密密钥
 */
@property (strong,nonatomic) NSString *enc_dec_key;

/*!
 @property  encryptUser
 @descript  图片加密的发送者
 */
@property (assign,nonatomic) int64_t encryptUser;

/*!
 @property  docid
 @descript  图片是否加密
 */
@property (assign,nonatomic) int docid;

/*!
 @property  width
 @descript  图片宽度
 */
@property (assign,nonatomic) CGFloat width;

/*!
 @property  height
 @descript  图片高度
 */
@property (assign,nonatomic) CGFloat height;

/*!
 @property  imageContents
 @descript  图片描述说明
 */
@property (strong,nonatomic) NSString *imageContents;

/*!
 * @method    initWithImage
 * @descript  通过图片初始化图片消息
 * @param     image 图片对象
 * @result    图片消息
 */
- (instancetype)initWithImage:(UIImage*)image;

/*!
 * @method    loadThumbnailImage
 * @descript  获取图片消息缩略图片
 * @param     fileData 图片文件路径
 * @result    空
 */
- (void)loadThumbnailImage:(FileDownloadResult)fileData onProgress:(FileDownloadProgress)progress;

/*!
 * @method    loadOriginalImage
 * @descript  获取图片消息原始图片
 * @param     fileData 图片文件路径
 * @result    空
 */
- (void)loadOriginalImage:(FileDownloadResult)fileData onProgress:(FileDownloadProgress)progress;

@end
