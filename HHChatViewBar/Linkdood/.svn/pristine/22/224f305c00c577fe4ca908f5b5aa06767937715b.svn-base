#import "LDGroupMemberModel+Extend.h"

@implementation LDGroupMemberModel (Extend)

- (void)setGroupMemberInfo:(void (^) (NSError *error))completion{
    [SDKClient sendRequestToSDK:imsdk::logic_cmd_setGroupMemberInfo
                       postData:self
                     completion:^(void *response) {
                         imsdk::resp_commonResult *result = (imsdk::resp_commonResult *)response;
                         NSError *error = [NSError errorWithResponse:result->code];
                         if (completion) {
                             MainQue(completion(error);)
                         }
                     }];
}

- (void)changeNotificationType:(void (^) (NSError *error))completion
{
    [SDKClient sendRequestToSDK:imsdk::logic_cmd_setShieldGroupMessage
                       postData:self
                     completion:^(void *response) {
                         imsdk::resp_commonResult *result = (imsdk::resp_commonResult *)response;
                         NSError *error = [NSError errorWithResponse:result->code];
                         if (completion) {
                             MainQue(completion(error);)
                         }
                     }];
}

@end
